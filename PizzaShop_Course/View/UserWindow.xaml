<UserControl x:Class="PizzaShop_Course.View.UserWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PizzaShop_Course.View"
             xmlns:vm="clr-namespace:PizzaShop_Course.ViewModel.Administrator"
             mc:Ignorable="d" 
             d:DesignHeight="67" d:DesignWidth="67">
    <UserControl.DataContext>
        <vm:UserViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Button Width="67" Height="67" Command="{Binding NavigateCommand}" CommandParameter="{x:Type local:UserInformationView}">
        <Button.Template>
            <ControlTemplate TargetType="{x:Type Button}">
                <Grid>
                    <Ellipse Fill="{TemplateBinding Background}"/>
                    <Image Source="{Binding Photo, RelativeSource={RelativeSource TemplatedParent}}"/>
                </Grid>
            </ControlTemplate>
        </Button.Template>
    </Button>
    </Grid>
</UserControl>
