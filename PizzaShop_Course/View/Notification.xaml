<UserControl x:Class="PizzaShop_Course.View.Notification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewconverters="clr-namespace:PizzaShop_Course.ViewConverters"
             xmlns:vm="clr-namespace:PizzaShop_Course.ViewModel"
             xmlns:local="clr-namespace:PizzaShop_Course.View"
             mc:Ignorable="d">
    <Border Background="#FFFFF7" Height="20" BorderThickness="1" BorderBrush="LightGray" CornerRadius="10" Width="170">
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="1" To="0" Duration="0:0:4"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        <TextBlock Text="{Binding NotificationText}" />
    </Border>
</UserControl>
