<UserControl x:Class="PizzaShop_Course.View.Customer.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PizzaShop_Course.View.Customer"
             xmlns:vm="clr-namespace:PizzaShop_Course.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="359" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:BasketViewModel/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel Margin="112,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Height="359">
            <Label Content="City"/>
            <ComboBox Width="91"/>
            <Label Content="Street"/>
            <TextBox/>
            <Label Content="Entrance"/>
            <TextBox/>
            <Label Content="Flat"/>
            <TextBox/>
            <Label Content="Floor"/>
            <TextBox/>
            <Button Content="Finally Order" Height="40" Width="93" Margin="0,30,0,0"/>
        </StackPanel>
        <local:BasketView Margin="311,0,0,0"/>
    </Grid>
</UserControl>
